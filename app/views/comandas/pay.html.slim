  = simple_form_for(@comanda, url: close_comanda_path(@comanda)) do |f|
    = f.error_notification

    .form-inputs
      .row
        .col-md-6
        .col-md-6
          = f.input :pago_con_tarjeta
      .row
        .col-md-6
        .col-md-6
          = f.input :propina, input_html: { class: 'no_spinner' }

    .form-actions
      = f.button :submit, "Â¡Cerrar!", class: "btn btn-danger"
      span.or o
      = link_to 'Cancelar', comandas_path

