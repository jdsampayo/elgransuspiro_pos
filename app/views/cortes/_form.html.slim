= simple_form_for(@corte, html: { class: 'form-small' }) do |f|
  = f.error_notification

  .form-inputs
    .row
      .col-md-3= f.input :inicial, readonly: true
    .row
      .col-md-3= f.input :pagos_con_efectivo, readonly: true, label: "Pagos en Efectivo"
      .col-md-3= f.input :pagos_con_tarjeta, readonly: true, label: "Pagos con Tarjeta"
      .col-md-3= f.input :ventas, readonly: true, label: "Total de Ventas"
      .col-md-3= f.input :propinas, readonly: true
    .row
      .col-md-3= f.input :gastos, readonly: true
    .row
      .col-md-3= f.input :total, readonly: true, label: "Caja Chica"
    .row
      .col-md-3= f.input :siguiente_dia, label: "Siguiente DÃ­a"
    .row
      .col-md-3= f.input :sobre, readonly: true, label: "Caja Fuerte"

  .form-actions
    = f.button :submit, "Realizar Corte", class: "btn btn-primary"
    span.or o
    = link_to 'cancelar', comandas_path
